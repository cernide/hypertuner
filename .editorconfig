# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Set default charset
[*.{ts,js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# isort configuration
multi_line_output = 1
skip = migrations

# Indentation override for all JS under lib directory
[*.{ts,tsx,js,css,yml,yaml}]
indent_style = space
indent_size = 2
